@page "/notes"
@inject IDbContextFactory<AutoCAC.Models.mainContext> DbFactory
<DataGridVanilla TItem="AutoCAC.Models.Tiu" GridModel="GridModel" >
</DataGridVanilla>

@code{
    private DataGridHelper<AutoCAC.Models.Tiu> GridModel = new()
    {
        QueryFactory = db => db.Tius
            .AsNoTracking()
            .Include(x => x.Patient),
        SearchColumns = new[] { "Patient.Name", "Patient.ChartNumber", "DocumentType", "Author"},
        IncludeColumns = new List<string>{"Patient.Name", "Patient.ChartNumber", "DocumentType"
                        , "Author", "EntryDateTime"}
    };
}