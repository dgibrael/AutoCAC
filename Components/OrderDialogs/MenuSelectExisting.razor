<DataGridDialog TItem="AutoCAC.Models.OrderDialog" GridModel="GridModel" />

@code {
    private DataGridHelper<AutoCAC.Models.OrderDialog> GridModel = new()
    {
        QueryFactory = db => db.OrderDialogs
            .Where(x => x.Type == "menu"),
        IncludeColumns = new[] { "DisplayText", "Name" },
        SearchColumns = new[] { "DisplayText", "Name" }
    };
}