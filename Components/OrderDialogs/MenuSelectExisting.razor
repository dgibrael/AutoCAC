<DataGridDialog TItem="AutoCAC.Models.OrderDialog" IncludeColumns="@(new[] { "DisplayText", "Name" })"
                SearchColumns="@(new[] { "DisplayText", "Name" })" QueryFactory="@Qry()" />

@code {
    private Func<AutoCAC.Models.mainContext, IQueryable<AutoCAC.Models.OrderDialog>> Qry()
    {
        return db => db.OrderDialogs
            .Where(x => x.Type == "menu");
    }
}