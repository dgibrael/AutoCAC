@page "/orderdialogs"
@using AutoCAC.Models
@inject IDbContextFactory<mainContext> DbFactory
@using AutoCAC.Components.Templates.DataGrids

<PageTitle>Order Dialogs</PageTitle>

<DataGridVanilla TItem="Models.OrderDialog" GridModel="GridModel" />

@code{
    private DataGridHelper<AutoCAC.Models.OrderDialog> GridModel = new()
    {
        IncludeColumns = new[] { "Name", "DisplayText", "Type", "DisplayGroup", "Package" },
        SearchColumns=new[] { "Name", "DisplayText" }
    };
}