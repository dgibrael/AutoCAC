@page "/drugpivot"
@using AutoCAC.Components.Templates.PivotGrids

<PivotVanilla TItem="AutoCAC.Models.Drug" GridModel="GridModel"/>

@code {
    private DataGridHelper<AutoCAC.Models.Drug> GridModel = new()
    {
        QueryFactory = db => db.Drugs
                    .Where(x => !string.IsNullOrWhiteSpace(x.PharmacyOrderableItem))
                    .OrderBy(x => x.PharmacyOrderableItem)
                        .ThenBy(x => x.Name)
    };
}

