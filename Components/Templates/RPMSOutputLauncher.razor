@inject IJSRuntime JS
@inject DialogService DialogService
@using AutoCAC.Extensions
<RadzenButton Text="Open RPMS Output" Click="@OpenDialog" />

@code {
    [CascadingParameter(Name = "MainLayout")] public MainLayout Layout { get; set; }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.ClearXtermAsync();
            await JS.WriteToXtermAsync(Layout.RPMS.Output.Buffered);
        }
    }

    private async Task OpenDialog()
    {
        await DialogService.OpenAsync<RPMSOutput>("RPMS Output", options: new DialogOptions { Width = "75%", Resizable = true });
    }
}

