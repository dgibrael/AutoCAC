@inject DialogService DialogService

<div class="p-3" style="min-width: 380px;">
    <RadzenAutoComplete Data="Suggestions"
                        @bind-Value="Value"
                        Placeholder="@Placeholder"
                        FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                        OpenOnFocus="true"
                        Style="width:100%;" />

    <div class="mt-3 flex justify-end gap-2">
        <RadzenButton Text="Cancel"
                      ButtonStyle="ButtonStyle.Light"
                      Click="() => DialogService.Close(null)" />
        <RadzenButton Text="OK"
                      ButtonStyle="ButtonStyle.Primary"
                      Disabled="@string.IsNullOrWhiteSpace(Value)"
                      Click="() => DialogService.Close(Value)" />
    </div>
</div>

@code {
    [Parameter] public List<string> Suggestions { get; set; } = new();
    [Parameter] public string Placeholder { get; set; } = string.Empty;
    [Parameter] public string Value { get; set; } = "";
}
